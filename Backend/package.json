{
  "name": "restaurante-backend",
  "version": "1.0.0",
  "description": "Sistema de restaurante - Backend API",
  "main": "src/app.js",
  "scripts": {
    "dev": "nodemon src/app.js",
    "start": "node src/app.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:ci": "cross-env NODE_ENV=test DATABASE_URL=file:./test.db jest --coverage --watchAll=false",
    "test:setup": "cross-env DATABASE_URL=file:./test.db npx prisma generate --schema=./prisma/schema.sqlite.prisma && cross-env DATABASE_URL=file:./test.db npx prisma db push --force-reset --schema=./prisma/schema.sqlite.prisma",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "node prisma/seed.js",
    "db:studio": "prisma studio"
  },
  "keywords": [
    "restaurant",
    "api",
    "express",
    "prisma",
    "mysql"
  ],
  "author": "Equipo de Desarrollo",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prisma": "^6.14.0",
    "supertest": "^7.1.4"
  }
}
